<!-- header -->
<header class="header">
  <div class="container container--lg">
    <!-- header__wrap -->
    <div class="header__wrap">
      <!-- header__logo -->
      <a href="#" class="header__logo">
        <img src="img/logo.svg" alt="Белая река Даховская" />
      </a>
      <!-- ./ End of .header__logo -->

      <div class="j_menu header__content">
        <div class="header__inner">
          <!-- header__nav -->
          <nav class="header__nav header-nav">
            <ul class="header-nav__list">
              <li class="header-nav__item">
                <a href="#" class="header-nav__link"> О комплексе </a>
              </li>
              <li class="header-nav__item">
                <a href="#" class="header-nav__link"> Схема комплекса </a>
