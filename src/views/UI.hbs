                  <button
                    class="button button--secondary button--error"
                    type="button"
                  >
                    <svg class="svg">
                      <use xlink:href="svg/sprite.svg#close"></use>
                    </svg>
                  </button>
                  <button
                    class="button button--flat button--error"
                    type="button"
                  >
                    <svg class="svg">
                      <use xlink:href="svg/sprite.svg#close"></use>
                    </svg>

                    <span> Error! </span>
                  </button>

                  <br />

                  <button
                    class="button button-icon button-icon--prev"
                    type="button"
                  >
                    <svg>
                      <use xlink:href="svg/sprite.svg#arrow-right"></use>
                    </svg>
                  </button>

                  <button
                    class="button button-icon button-icon--next"
                    type="button"
                  >
                    <svg>
                      <use xlink:href="svg/sprite.svg#arrow-right"></use>
                    </svg>
                  </button>

                  <button
                    disabled
                    class="button button-icon button-icon--prev"
                    type="button"
                  >
                    <svg>
                      <use xlink:href="svg/sprite.svg#arrow-right"></use>
                    </svg>
                  </button>

                  <button
                    disabled
                    class="button button-icon button-icon--next"
                    type="button"
                  >
                    <svg>
                      <use xlink:href="svg/sprite.svg#arrow-right"></use>
                    </svg>
                  </button>

                  <br />

                  <button
                    class="button button-icon button--secondary button-icon--prev"
                    type="button"
                  >
                    <svg>
                      <use xlink:href="svg/sprite.svg#arrow-right"></use>
