<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <title>{{ title }}</title>
  </head>
  <body>
    <div class="content">
      {{> sections/header }}

      <main>
        <!-- sitemap -->
        <section class="sitemap-section">
          <div class="container">
            <h1>{{ title }}</h1>
            <nav class="sitemap__nav">
              {{#each views}}
              {{#with this}}
              <a class="sitemap__link" href="{{ href }}">
                {{ name }}
              </a>
              {{/with}}
              {{/each}}
            </nav>
          </div>
          <!-- ./ End of container -->
        </section>
        <!-- ./ End of sitemap -->
      </main>

      {{> sections/footer }}
    </div>
  </body>
</html>
